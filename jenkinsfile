pipeline {
    agent any
    stages{
        stage('git cloned'){
            steps{
                git url:'https://github.com/Felix-Jayan/bank-project/', branch: "main"
              
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t fiya/myfirstproject:v1 .'
                    sh 'docker images'
                }
            }
        }
          stage('Docker login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pwd', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh 'docker push fiya/myfirstproject:v1'
                }
            }
        }
        
     stage('Deploy') {
            steps {
                script{
                    sh 'sudo docker run -itd --name My-project-con -p 8091:80 fiya/myfirstproject:v1'
                       }
                    }
                }
    }
}
